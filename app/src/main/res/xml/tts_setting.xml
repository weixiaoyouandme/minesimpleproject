<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <EditTextPreference
        android:dialogTitle="请输入语速(-500-500)"
        android:key="speed_preference"
        android:defaultValue="@string/tts_default_value"
        android:summary="默认值：0 "
        android:title="语速" />
    <EditTextPreference
        android:dialogTitle="请输入音调(-500-500)"
        android:key="pitch_preference"
        android:defaultValue="@string/tts_default_value"
        android:summary="默认值：0 "
        android:title="音调" />
    <EditTextPreference
        android:dialogTitle="请输入音量(-20-20)"
        android:key="volume_preference"
        android:defaultValue="@string/tts_default_value"
        android:summary="默认值：0 "
        android:title="音量" />
    <ListPreference
        android:defaultValue="3"
        android:entries="@array/stream_entries"
        android:entryValues="@array/stream_values"
        android:key="stream_preference"
        android:title="音频流类型" />

</PreferenceScreen>