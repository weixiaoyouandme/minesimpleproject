<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="uid:"
        android:textSize="30dp"
        android:id="@+id/tvUid"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:hint="Please enter uid"
        android:id="@+id/etUid"/>
    <Button
        android:id="@+id/btnReg"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Button" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify Button"
        android:textAllCaps="false"
        android:id="@+id/btnVer"
        android:layout_below="@+id/btnReg"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/btnVer"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="TakePhoto"
        android:id="@+id/btnTakePhoto"
        android:layout_above="@+id/btnChoosePhoto"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="ChoosePhoto"
        android:id="@+id/btnChoosePhoto"
        android:layout_above="@+id/btnBack"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Back"
        android:id="@+id/btnBack"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
