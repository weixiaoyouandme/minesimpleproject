<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splish_bg"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:text="参数设置：" />

        <EditText
            android:id="@+id/edit_server_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/splish_eidt_bg"
            android:hint="@string/input_server_ip_prompt"
            android:maxLines="10"
            android:paddingBottom="70dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text=""
            android:textColor="#ffFFFF"
            android:textColorHighlight="#FFFFFF" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="@dimen/splish_into_btn_w"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/splish_btn_bg"
            android:text="@string/click_into"
            android:textColor="@color/splish_text_color" />
    </LinearLayout>


</RelativeLayout>